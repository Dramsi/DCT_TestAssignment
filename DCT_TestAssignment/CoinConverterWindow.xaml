<Window x:Class="DCT_TestAssignment.CoinConverterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCT_TestAssignment"
        mc:Ignorable="d"
        Title="CoinConverterWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Name="stackPanel">
            <Label Name="labelCoin1" Margin="10,0,10,0">Choose first coin and write amount:</Label>
            <ComboBox Name="comboBoxCoin1" Margin="10,0,10,10" SelectionChanged="comboBoxCoin1_SelectionChanged"></ComboBox>
            <TextBox Name="textBoxCoin1" Margin="10,0,10,10"></TextBox>
            <Label Name="labelCoin2" Margin="10,0,10,0">Choose second coin:</Label>
            <ComboBox Name="comboBoxCoin2" Margin="10,0,10,10" SelectionChanged="comboBoxCoin2_SelectionChanged"></ComboBox>
            <Button Name="convertButton" Margin="10,20,10,10" Click="convertButton_Click">Convert</Button>
            <Label Name="labelResult" Margin="10,0,10,0">Result:</Label>
            <TextBox Name="textBoxResult" Margin="10,0,10,10"></TextBox>
        </StackPanel>
    </Grid>
</Window>
